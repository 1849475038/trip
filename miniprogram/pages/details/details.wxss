.list {
  background: white;
  width: 100%;
  height: auto;
  border: 1rpx solid gainsboro;
  border-radius: 12rpx;
  display: flex;
}

.list .img{
  border-radius: 12rpx;
}
.img {

  width: 150rpx;
  height: 180rpx;
  padding: 20rpx;
  display: inline-table;
}

.north-word {
  flex: auto;
}

.north-name {
  padding: 10rpx;
  width: 530rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.north-tip {
  width: 530rpx;
  padding: 4rpx 0;
  font-size: 26rpx;
  color: gray;
}

.north-lie {
 width: 400rpx;
 
  font-size: 26rpx;
  color: gray;
}

.price {
  padding-top: 2rpx;
  
  justify-content: center;
 flex-wrap: nowrap;
}

.box {
  height: 50rpx;
  display: flex;
  padding: 10rpx;
  line-height: 50rpx;
}

.ellipsis {
  overflow: hidden; /* 文字超出固定宽度隐藏*/
  white-space: nowrap; /*文字强制不换行 */
  text-overflow: ellipsis; /* 多出部分文字以省略号显示 */
}
