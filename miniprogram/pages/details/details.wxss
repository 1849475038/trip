/* pages/details/details.wxss */

.swiper-box swiper-item image {
  width: 100%;
  height: 100%;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 20rpx 0 0 24rpx;
}

.header view {
  float: left;
}

.location {
  width: 25%;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 24rpx;
  color: white;
  font-size: 24rpx;
  line-height: 50rpx;
  padding-left: 12rpx;
}

.location image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.search {
  width: 60%;
  height: 50rpx;
  margin-left: 24rpx;
  position: relative;
}

.search input {
  height: 50rpx;
  padding-left: 52rpx;
  background: white;
  border-radius: 24rpx;
  font-size: 24rpx;
}

.search image {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 8rpx;
  left: 14rpx;
}

