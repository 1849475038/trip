/* pages/contents/contents.wxss */

/* 顶部搜索框 */

.header {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 40px;
  /* background: sandybrown; */
  padding: 10px 0 0 12px;
  background: white;
}

.header view {
  float: left;
}

.location {
  width: 25%;
  height: 25px;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 12px;
  color: white;
  font-size: 12px;
  line-height: 25px;
  padding-left: 6px;
}

.location image {
  width: 16px;
  height: 16px;
  vertical-align: middle;
  /* 图片文字的垂直方向位置设置 */
}

.search {
  width: 60%;
  height: 25px;
  margin-left: 12px;
  position: relative;
}

.search input {
  height: 25px;
  padding-left: 26px;
  background: gainsboro;
  border-radius: 12px;
  font-size: 12px;
}

.search image {
  width: 18px;
  height: 18px;
  position: absolute;
  top: 4px;
  left: 7px;
}

.content {
  display: flex;
  /* height: auto; */
}

.menu-left {
  width: 250rpx;
  height: 100%;
  background: #efefef;
}

.menu-iten {
  text-align: center;
  padding: 26rpx;
  font-size: 28rpx;
}

.menu-right {
  background: white;
  height: 100%;
}

.remen {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 60rpx;
  padding: 0 20rpx;
}

.tp {
  
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.bj{
  height: 100%;
  position: fixed;
  background: white;
}
.tp-box {
  width: 80rpx;
  height: 80rpx;
}

.AA {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
}

.tupian-box {
  float: left;
  width: 185rpx;
  text-align: center;
  padding: 10rpx 0;
}

.tp-wz {
  font-size: 24rpx;
  color: #161823;
}

